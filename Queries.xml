	declare namespace tss = "http://tss";
declare function tss:value-intersect
  ( $arg1 as xs:anyAtomicType* ,
    $arg2 as xs:anyAtomicType* )  as xs:anyAtomicType* {
        distinct-values($arg1[.=$arg2])
 } ;

